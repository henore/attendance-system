# 勤怠管理システム環境変数設定テンプレート
# このファイルを .env にコピーして使用してください

# サーバー設定
PORT=3000
NODE_ENV=development
BASE_URL=http://localhost:3000

# セッション設定
SESSION_SECRET=your-very-secure-random-session-secret-here
SESSION_NAME=attendance-session
SESSION_MAX_AGE=86400000

# bcryptセキュリティ設定
BCRYPT_SALT_ROUNDS=12
BCRYPT_PEPPER=your-secure-pepper-string-here

# データベース設定
DB_PATH=./database/attendance.db
SESSION_DB_PATH=./database/sessions.db

# LINE Messaging API設定（オプション）
# LINE_CHANNEL_ACCESS_TOKEN=your-line-channel-access-token
# LINE_CHANNEL_SECRET=your-line-channel-secret
# DEFAULT_LINE_USER_ID=your-default-line-user-id

# ログ設定
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# セキュリティ設定
# CSP_NONCE_SECRET=your-csp-nonce-secret
# CSRF_SECRET=your-csrf-secret

# 本番環境設定例
# NODE_ENV=production
# BASE_URL=https://your-domain.com
# SESSION_SECURE=true
# SESSION_SAME_SITE=strict